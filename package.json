{
  "name": "xtream-viewer",
  "version": "0.1.0",
  "private": true,
  "description": "Viewer Xtream (Live/VOD/Series) avec M3U/EPG, mode desktop Electron",
  "author": "Wajdi Hassen",
  "type": "module",
  "scripts": {
    "dev": "node server/index.js",
    "start": "NODE_ENV=production node server/index.js",
    "desktop": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -w"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "morgan": "^1.10.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "electron": "^30.5.1",
    "electron-builder": "^24.13.3",
    "install": "^0.13.0",
    "npm": "^11.6.0"
  },
  "main": "electron/main.js",
  "build": {
    "appId": "com.xtream.viewer",
    "productName": "Xtream Viewer",
    "files": [
      "public/**",
      "server/**",
      "electron/**",
      "package.json"
    ],
    "asar": true,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
